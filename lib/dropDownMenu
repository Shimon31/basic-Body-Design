
        List<String> cityList = [
          "Dhaka",
          "Rajshahi",
          "Khulna",
          "Barishal",
          "Chittagong",
        ];

      DropdownButton(
              value: selectedCity,
              items:
                  cityList.map((String item) {
                    return DropdownMenuItem(value: item, child: Text(item));
                  }).toList(),

              onChanged: (item) {
                print("Clicked Successfully");
              },
            ),